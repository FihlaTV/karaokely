<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:background="#2C1035"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="400dp"
		android:layout_margin="10dp"
		android:background="@drawable/sea_moon">

		<LinearLayout
			android:id="@+id/pane"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="10dp"
			android:orientation="vertical"
			android:padding="5dp">

			<TextView
				android:id="@+id/firstLine"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="#FFFFFF"
				android:textSize="15sp"
				android:textStyle="bold" />

		</LinearLayout>

		<TextView
			android:id="@+id/cueTv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textColor="#FFFFFF"
			android:textSize="15sp" />

		<ImageView
			android:layout_width="130dp"
			android:layout_height="wrap_content"
			android:layout_above="@id/pane"
			android:layout_alignParentRight="true"
			android:alpha="0.3"
			android:background="@drawable/mys" />

	</RelativeLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="80dp"
			android:background="@drawable/button"
			android:textSize="15sp"
			android:textColor="#FFFAFA"
			android:onClick="selectSinger"
			android:layout_marginRight="10dp"
			android:id="@+id/toggle"/>

		<Button
			android:layout_height="wrap_content"
			android:text="Play"
			android:layout_width="80dp"
			android:background="@drawable/button"
			android:textSize="15sp"
			android:textColor="#FFFAFA"
			android:onClick="startPlaying"
			android:id="@+id/playButton"/>

		<Button
			android:layout_height="wrap_content"
			android:text="Cue"
			android:layout_width="80dp"
			android:background="@drawable/button"
			android:textSize="15sp"
			android:textColor="#FFFAFA"
			android:id="@+id/cueButton"
			android:onClick="showCue"
			android:layout_marginLeft="10dp"
			android:visibility="visible"/>

	</LinearLayout>

	<SeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/seekbar"
		android:layout_marginTop="10dp"/>

	<TextView
		android:id="@+id/secondLine"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="#FFFFFF"
		android:textSize="15sp"
		android:textStyle="bold" />

</LinearLayout>
